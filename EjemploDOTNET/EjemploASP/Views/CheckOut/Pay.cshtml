@model PedidoVirtual

@{
    ViewData["Title"] = "Pay";
}


@using (Html.BeginForm("PayBill", "billingController", "Post"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Facturaci√≥n</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Tarjeta.NumeroTarjeta)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Tarjeta.NumeroTarjeta)
        
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Tarjeta.FechaExpiracion)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Tarjeta.FechaExpiracion)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Tarjeta.CVV)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Tarjeta.CVV)
        </div>
        @Html.HiddenFor(model => model.Precio)
        @Html.HiddenFor(model => model.MetodoPago)
        @Html.HiddenFor(model => model.TipoEntrega)
        @Html.HiddenFor(model => model.Direccion)

        <div hidden>
        @for(int i=0; i < Model.Productos.Count() ; i++)
        {
            @Html.HiddenFor(model => Model.Productos[i])
            @Html.EditorFor(model => model.Productos[i])
        }
        </div>
        <p>
            <input type="submit" value="PayBill" />
        </p>
    </fieldset>
}