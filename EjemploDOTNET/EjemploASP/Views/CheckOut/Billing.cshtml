

@model Pedido

@{
    ViewData["Title"] = "Billing";
    Layout = null;
}

@using (Html.BeginForm("Pay", "billingController","GoBack"))
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width-device-width"/>
        
    </head>
    <body>
        <h2>Facturación</h2>
        <b>Número de productos: </b> @Model.Productos.Count()
        <br />
        <b>Costo total: </b>@Model.Precio
        <br />
        <p>
            <input type="submit" value="Pagar"/>
        </p>
        
        
    </body>
    </html>
}
@using (Html.BeginForm("billingController","GoBack"))
{
    <a href="../billingController/GoBack">
        <input type="button" value="Retroceder" />
    </a>
        
}